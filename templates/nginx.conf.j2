events {}
http {
    server {
        listen 80;
        listen   [::]:80 default_server;
        location / {
            # Adjust host and port as required.
            proxy_pass http://{{ paperless_ngx_docker_app_container_name }}:8000/;

            # These configuration options are required for WebSockets to work.
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";

            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Host $server_name;
            add_header Referrer-Policy "strict-origin-when-cross-origin";
        }
    }
{% if paperless_ngx_docker_reverse_proxy_ssl_key | length > 0 and
      paperless_ngx_docker_reverse_proxy_ssl_cert | length > 0 %}
    server {
        listen 443 ssl http2;
        listen   [::]:443 ssl http2 default_server;

        ssl_session_timeout 1d;
        ssl_session_cache shared:MozSSL:10m;  # about 40000 sessions
        ssl_session_tickets off;
        ssl_certificate {{ _nginx_ssl_in_container_cert_path }};
        ssl_certificate_key {{ _nginx_ssl_in_container_key_path }};

        # modern configuration
        ssl_protocols TLSv1.3;
        ssl_prefer_server_ciphers off;

        # HSTS (ngx_http_headers_module is required) (63072000 seconds)
        add_header Strict-Transport-Security "max-age=63072000" always;

        # OCSP stapling
        ssl_stapling on;
        ssl_stapling_verify on;

        location / {
            # Adjust host and port as required.
            proxy_pass http://{{ paperless_ngx_docker_app_container_name }}:8000/;

            # These configuration options are required for WebSockets to work.
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";

            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Host $server_name;
            add_header Referrer-Policy "strict-origin-when-cross-origin";
        }
    }
{% endif %}
}
